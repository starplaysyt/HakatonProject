    <main class="main-content">

        <div class="widget welcome-card">
            <div class="welcome-header">
                <div class="user-icon"><span class="iconify" data-icon="iconamoon:profile"></span></div>
                <h2>Привет, Андрей</h2>
            </div>
            <div class="sample-cards">
